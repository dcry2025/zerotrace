# Server
NODE_ENV=development
PORT=7000

# Frontend
FRONTEND_ORIGIN=http://localhost:3000,http://localhost:5173

# Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=
MYSQL_NAME=

# Database Logging
# Set to true to see all SQL queries in console (useful for debugging)
DB_LOGGING=false

# Database SSL Configuration
# Enable for production databases that require SSL
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Database Connection Pool Settings
# Maximum number of connections in pool
DB_POOL_MAX=50
# Minimum number of connections in pool
DB_POOL_MIN=10
# Maximum time (ms) that pool will try to get connection before throwing error
DB_POOL_ACQUIRE=30000
# Maximum time (ms) that a connection can be idle before being released
DB_POOL_IDLE=10000

# Database Retry Settings
# Maximum number of retry attempts for failed connections
DB_RETRY_MAX=3

# Redis
REDIS_HOST=localhost
REDIS_POST=6379
REDIS_PASSWORD=
REDIS_TTL=300

# Encryption (32+ characters)
ENCRYPTION_KEY=

# Telegram (Optional - for read notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
APP_DOMAIN=http://localhost:7000

# Generate with generate-metrics-api-key
METRICS_API_KEY=